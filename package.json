{
  "name": "iware-perizinan",
  "version": "1.0.0",
  "description": "Aplikasi Perizinan Cuti/Lembur IWARE",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && npm start",
    "server": "cd backend && npm start",
    "server:dev": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "client:dev": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "deploy-check": "node deploy-check.js",
    "build": "cd frontend && npm install && npm run build",
    "postbuild": "cd backend && npm install",
    "hostinger:install": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "hostinger:build": "cd frontend && npm run build",
    "hostinger:deploy": "cd frontend && npm run build && cd .. && node copy-to-hostinger.js",
    "hostinger:start": "cd backend && npm start",
    "hostinger:validate": "node validate-hostinger.js",
    "hostinger:package": "node create-hostinger-package.js",
    "hostinger:zip": "node create-hostinger-zip.js",
    "precommit": "npm run hostinger:validate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
