{
  "name": "iware-perizinan",
  "version": "1.0.0",
  "framework": "react-express",
  "buildCommand": "npm run hostinger:build",
  "startCommand": "npm run hostinger:start",
  "installCommand": "npm run hostinger:install",
  "directories": {
    "frontend": {
      "path": "frontend",
      "build": "frontend/build",
      "public": true
    },
    "backend": {
      "path": "backend",
      "entry": "server.js",
      "port": 5000,
      "nodeVersion": "18.x"
    }
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "5000"
  },
  "database": {
    "type": "mysql",
    "required": true,
    "initScript": "backend/scripts/init-database.js"
  },
  "requirements": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "php": ">=7.4",
    "mysql": ">=5.7"
  }
}
