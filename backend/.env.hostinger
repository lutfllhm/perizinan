# Hostinger Production Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000

# API URL - Update with your actual domain
API_URL=https://iwareid.com/api
FRONTEND_URL=https://iwareid.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Get these from Hostinger MySQL Database section
DB_HOST=localhost
DB_USER=your_hostinger_db_user
DB_PASSWORD=your_hostinger_db_password
DB_NAME=your_hostinger_db_name
DB_PORT=3306

# Database connection pool settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate using: node scripts/generate-jwt-secret.js
JWT_SECRET=your_generated_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# WHATSAPP OTP CONFIGURATION (Optional)
# ============================================
# If you're using WhatsApp OTP service
WHATSAPP_API_URL=https://your-whatsapp-api.com
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_SENDER=+6281234567890

# OTP Settings
OTP_EXPIRES_IN=300000
OTP_LENGTH=6

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ============================================
# SECURITY
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# If you want to send email notifications
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# ADMIN DEFAULT (for first time setup)
# ============================================
# These are used only during database initialization
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAMA=Administrator

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with actual values to Git
# 2. Generate strong JWT_SECRET using the provided script
# 3. Change ADMIN_PASSWORD immediately after first login
# 4. Update all 'yourdomain.com' with your actual domain
# 5. Get database credentials from Hostinger Control Panel
